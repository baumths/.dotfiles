# set variable identifying the chroot you work in (used in the prompt below)
if [ -z "${debian_chroot:-}" ] && [ -r /etc/debian_chroot ]; then
    debian_chroot=$(cat /etc/debian_chroot)
fi

# set a fancy prompt (non-color, unless we know we "want" color)
case "$TERM" in
    xterm-color|*-256color) color_prompt=yes;;
esac

if [ -x /usr/bin/tput ] && tput setaf 1 >&/dev/null; then
    color_prompt=yes
    BOLD="\[$(tput bold)\]"
    CLEAR="\[$(tput sgr0)\]"
else
    color_prompt=
    BOLD='';
    CLEAR="\\e[0m";
fi

if [ "$color_prompt" = yes ]; then
    GREY="\[\e[38;5;8m\]"
    WHITE="\[\e[38;5;225m\]"
    BLUE="\[\e[38;5;26m\]"
    ORANGE="\[\e[38;5;208m\]"
    GREEN="\[\e[38;5;34m\]"
    
    PS1="\[\033]0;\w\007\]"; # Sets terminal window title to CWD
    PS1+="${BOLD}${GREY}{ ";
    PS1+="${BLUE}\u "; # User
    PS1+="${GREY}at ${WHITE}\h "; # Host
    PS1+="${GREY}in ${ORANGE}\w"; # CWD
    PS1+="\$([[ -n \$(git branch 2> /dev/null) ]] && echo \" ${GREY}on \")";
    PS1+="${GREEN}\$(git branch --show-current 2> /dev/null)"; # Git Branch
    PS1+="${GREY} }";
    PS1+="\nâŸ¿  ${CLEAR}"; # Prompt
    export PS1;

    PS2="${GREY}+ ${CLEAR}";
    export PS2;
else
    PS1='${debian_chroot:+($debian_chroot)}\u@\h:\w\$ '
fi
unset color_prompt BOLD CLEAR GREY WHITE BLUE ORANGE GREEN

# If this is an xterm set the title to user@host:dir
case "$TERM" in
xterm*|rxvt*)
    PS1="\[\e]0;${debian_chroot:+($debian_chroot)}\u@\h: \w\a\]$PS1"
    ;;
*)
    ;;
esac
